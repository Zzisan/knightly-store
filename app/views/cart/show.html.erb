<h1>Your Shopping Cart</h1>

<% if session[:cart].present? && session[:cart].any? %>
  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Subtotal</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% total = 0 %>
      <% session[:cart].each do |product_id, quantity| %>
        <% product = Product.find_by(id: product_id) %>
        <% if product %>
          <% subtotal = product.price * quantity %>
          <% total += subtotal %>
          <tr>
            <td><%= product.name %></td>
            <td>
              <%= form_with url: update_item_cart_path(product_id: product.id), method: :patch, local: true do |f| %>
                <%= f.number_field :quantity, value: quantity, min: 1 %>
                <%= f.submit "Update" %>
              <% end %>
            </td>
            <td><%= number_to_currency(product.price) %></td>
            <td><%= number_to_currency(subtotal) %></td>
            <td>
              <%= button_to "Remove", remove_item_cart_path(product_id: product.id), method: :delete, data: { confirm: "Are you sure?" } %>
            </td>
          </tr>
        <% end %>
      <% end %>
      <tr>
        <td colspan="3"><strong>Total</strong></td>
        <td><strong><%= number_to_currency(total) %></strong></td>
        <td></td>
      </tr>
    </tbody>
  </table>
  <%= link_to "Proceed to Checkout", "#" %> <!-- Placeholder for checkout -->
<% else %>
  <p>Your cart is empty.</p>
<% end %>
