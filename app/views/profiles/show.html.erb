<h1>Your Profile</h1>

<div class="card mb-4">
  <div class="card-header">
    <h2>Personal Information</h2>
  </div>
  <div class="card-body">
    <p><strong>Name:</strong> <%= @customer.first_name %> <%= @customer.last_name %></p>
    <p><strong>Email:</strong> <%= @customer.email %></p>
    <p><strong>Phone:</strong> <%= @customer.phone.present? ? @customer.phone : "Not provided" %></p>
  </div>
</div>

<div class="card mb-4">
  <div class="card-header">
    <h2>Address Information</h2>
  </div>
  <div class="card-body">
    <% if @customer.address.present? && @customer.province.present? %>
      <p><strong>Address:</strong> <%= @customer.address %></p>
      <p><strong>Province:</strong> <%= @customer.province.name %></p>
    <% else %>
      <p>No address information provided.</p>
    <% end %>
  </div>
</div>

<div class="mt-3">
  <%= link_to "Edit Profile", edit_profile_path, class: "btn btn-primary" %>
</div>