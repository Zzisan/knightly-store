<!DOCTYPE html>
<html>
  <head>
    <title>Knightly</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <%= link_to "Knightly", root_path, class: "navbar-brand" %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <%= link_to "Home", root_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Products", products_path, class: "nav-link" %>
            </li>

            <% if customer_signed_in? %>
            <li class="nav-item">
              <%= link_to "My Profile", profile_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "My Orders", orders_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= button_to "Logout", destroy_customer_session_path,
                    method: :delete,
                    data: { confirm: "Are you sure?" },
                    class: "nav-link btn btn-link" %>
            </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Login", new_customer_session_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Sign Up", new_customer_registration_path, class: "nav-link" %>
              </li>
            <% end %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle position-relative" href="#" id="cartDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Cart
                <% cart_count = session[:cart].present? ? session[:cart].values.sum : 0 %>
                <% if cart_count > 0 %>
                  <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                    <%= cart_count %>
                  </span>
                <% end %>
              </a>
              <ul class="dropdown-menu" aria-labelledby="cartDropdown">
                <li><%= link_to "View Cart", cart_path, class: "dropdown-item" %></li>
                <li><%= link_to "Tax Invoice", preview_invoice_checkouts_path, class: "dropdown-item" %></li>
                <li><hr class="dropdown-divider"></li>
                <li><%= link_to "Checkout", new_checkout_path, class: "dropdown-item" %></li>
              </ul>
            </li>
            <li class="nav-item">
              <%= link_to "About", about_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Contact", contact_path, class: "nav-link" %>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
      <% if notice %>
        <div class="alert alert-success"><%= notice %></div>
      <% end %>
      <% if alert %>
        <div class="alert alert-danger"><%= alert %></div>
      <% end %>
      
      <% if flash[:cart_added] %>
        <div class="toast-container position-fixed top-0 end-0 p-3">
          <div class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header bg-primary text-white">
              <strong class="me-auto">Added to Cart</strong>
              <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
              <p><strong><%= flash[:cart_added][:product_name] %></strong> has been added to your cart.</p>
              <div class="mt-2 pt-2 border-top">
                <%= link_to "View Cart", cart_path, class: "btn btn-sm btn-primary" %>
                <%= link_to "Checkout", new_checkout_path, class: "btn btn-sm btn-success" %>
                <%= link_to "View Tax Invoice", preview_invoice_checkouts_path, class: "btn btn-sm btn-info" %>
              </div>
            </div>
          </div>
        </div>
        
        <script>
          document.addEventListener('DOMContentLoaded', function() {
            var toast = document.querySelector('.toast');
            var closeButton = toast.querySelector('.btn-close');
            
            // Auto-hide the toast after 5 seconds
            setTimeout(function() {
              toast.classList.remove('show');
            }, 5000);
            
            // Close button functionality
            closeButton.addEventListener('click', function() {
              toast.classList.remove('show');
            });
          });
        </script>
      <% end %>
      
      <%= yield %>
    </div>

    <!-- Include Bootstrap JS via CDN -->
    <%= javascript_include_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js", integrity: "sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p", crossorigin: "anonymous" %>
  </body>
</html>
