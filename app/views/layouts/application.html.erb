<!DOCTYPE html>
<html>
  <head>
    <title>Knightly</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <%= link_to "Knightly", root_path, class: "navbar-brand" %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <%= link_to "Home", root_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Products", products_path, class: "nav-link" %>
            </li>

            <% if customer_signed_in? %>
            <li class="nav-item">
              <%= link_to "My Profile", profile_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "My Orders", orders_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= button_to "Logout", destroy_customer_session_path,
                    method: :delete,
                    data: { confirm: "Are you sure?" },
                    class: "nav-link btn btn-link" %>
            </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Login", new_customer_session_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Sign Up", new_customer_registration_path, class: "nav-link" %>
              </li>
            <% end %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle position-relative" href="#" id="cartDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Cart
                <% if session[:cart].present? && session[:cart].values.sum > 0 %>
                  <span id="cart-count" class="cart-count"><%= session[:cart].values.sum %></span>
                <% else %>
                  <span id="cart-count" class="cart-count" style="display: none;">0</span>
                <% end %>
              </a>
              <ul class="dropdown-menu" aria-labelledby="cartDropdown">
                <li><%= link_to "View Cart", cart_path, class: "dropdown-item" %></li>
                <li><%= link_to "Tax Invoice", preview_invoice_checkouts_path, class: "dropdown-item" %></li>
                <li><hr class="dropdown-divider"></li>
                <li><%= link_to "Checkout", new_checkout_path, class: "dropdown-item" %></li>
              </ul>
            </li>
            <li class="nav-item">
              <%= link_to "About", about_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Contact", contact_path, class: "nav-link" %>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
      <% if notice %>
        <div class="alert alert-success"><%= notice %></div>
      <% end %>
      <% if alert %>
        <div class="alert alert-danger"><%= alert %></div>
      <% end %>
      <%= yield %>
    </div>

    <!-- Include Bootstrap JS via CDN -->
    <%= javascript_include_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js", integrity: "sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p", crossorigin: "anonymous" %>
  </body>
</html>
